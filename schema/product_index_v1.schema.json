{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tech4Life Product Registry Export (v1)",
  "type": "object",
  "required": [
    "schema_version",
    "products"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": [
        "1.0.0"
      ]
    },
    "products": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "toil_id",
          "product_name",
          "category",
          "lead_creator",
          "status",
          "license_state"
        ],
        "additionalProperties": false,
        "properties": {
          "toil_id": {
            "type": "string",
            "pattern": "^T4L-TOIL-\\d{3}(?:-[A-Z0-9]+)+$"
          },
          "product_name": {
            "type": "string",
            "minLength": 1
          },
          "category": {
            "type": "string",
            "minLength": 1
          },
          "lead_creator": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "minLength": 1
          },
          "license_state": {
            "type": "string",
            "minLength": 1
          },
          "aliases": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "legacy_ids": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          }
        }
      }
    }
  }
}
